<h1>Longest Word Game</h1>

<hr>

<h2>New Game</h2>
<ul>
<% @letters.each do |letter| %>
  <li class='btn btn-primary m-2 rounded-0'><%= letter %></li>
<% end %>
</ul>

<br>

<form action='/score' method='post' data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <label for='answer'>What is the longest word you can find?</label>
    <div class="input-group mb-3">
      <input id="letters" name="letters" type="hidden" value=<%= @letters.join(',') %> />
      <input type='text' class="form-control" id='answer' name='answer' aria-describedby="answer-input" required>
      <div class="input-group-append">
        <input type='submit' value='Play' class="input-group-text btn .btn-outline-dark border border-dark" id="answer-input">
      </div>
    </div>
  </div>
</form>
